<div class="sidebar-blog">
    {% if nav|length>1 %}
        <ul class="sidebar-blog__content categories-list">
        {% for nav_item in nav %}
            {% if nav_item.children %}
                <li class="categories-list__item category {% if nav_item.active%}category--active{% endif %}">{{ nav_item.title }}
                    <ul>
                    {% for nav_item in nav_item.children %}
                        <li class="{% if nav_item.active%}current{% endif %}">
                            <a href="{{ nav_item.url|url }}">{{ nav_item.title }}</a>
                        </li>
                    {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li class="categories-list__item category {% if nav_item.active%}current{% endif %}">
                    <a href="{{ nav_item.url|url }}">{{ nav_item.title }}</a>
                </li>
            {% endif %}
        {% endfor %}
        </ul>
    {% endif %}
